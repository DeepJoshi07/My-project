<% layout("layouts/boilerplate") %>
<body>
    
    <div class="row">
        <div class="col-8 offset-2">
            <br>
            <h2>Edit your listing</h2>
            
            <form method="POST" action="/listings/<%= listing._id%>/edit?_method=PUT" novalidate class="needs-validation">
                <div>
                    <label for="" class="form-label">Title</label>
                    <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" required>

                </div>
                <div>
                    <label for="" class="form-label">Description</label>
                    <textarea name="listing[description]" id="" class="form-control" required><%= listing.description %></textarea>
                    <div class="valid-feedback"> Dscription seems ok!</div>
                    <div class="invalid-feedback">please enter description</div>
                </div>
                <div>
                    <label for="" class="form-label">Location</label>
                    <input type="text" name="listing[location]"  value="<%= listing.location %>"class="form-control" required>
                    <div class="valid-feedback">Location is correct!</div>
                    <div class="invalid-feedback">please enter valid location</div>
                </div>
                <div class="row">
                        <div class="col-md-4">
                            <label for="" class="form-label">Price</label>
                            <input type="text" name="listing[price]"  value="<%= listing.price %>"class="form-control" required>
                            <div class="valid-feedback">Price is fine!</div>
                            <div class="invalid-feedback">please enter price</div>
                        </div>
                        <div class="col-md-8">
                            <label for="" class="form-label">Country</label>
                            <input type="text" name="listing[country]" value="<%= listing.country %>"class="form-control" required>
                            <div class="valid-feedback"> Country is valid!</div>
                            <div class="invalid-feedback">please enter valid country</div>
                        </div>
                </div>
                <div>
                    <label for="" class="form-label">Image</label>
                    <input type="text" name="listing[image][url]"  value="<%= listing.image.url %>"class="form-control" required>
                    <div class="valid-feedback">entered</div>
                    <div class="invalid-feedback">please enter Image</div>
                </div>
                <br><br>
                <button class="btn btn-dark">Edit it</button>
                <br ><br>
            </form>
        </div>
    </div>
</body>
