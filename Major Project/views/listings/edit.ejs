<% layout("layouts/boilerplate") %>
<body>
    
    <div class="row">
        <div class="col-8 offset-2">
            <br>
            <h2>Edit your listing</h2>
            
            <form method="POST" action="/listings/<%= listing._id%>/edit?_method=PUT">
                <div>
                    <label for="" class="form-label"></label>
                    <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control">
                </div>
                <div>
                    <label for="" class="form-label"></label>
                    <textarea name="listing[description]" id="" class="form-control" ><%= listing.description %></textarea>
                </div>
                <div>
                    <label for="" class="form-label"></label>
                    <input type="text" name="listing[location]"  value="<%= listing.location %>"class="form-control">
                </div>
                <div class="row">
                        <div class="col-md-4">
                            <label for="" class="form-label"></label>
                            <input type="text" name="listing[price]"  value="<%= listing.price %>"class="form-control">
                        </div>
                        <div class="col-md-8">
                            <label for="" class="form-label"></label>
                            <input type="text" name="listing[country]" value="<%= listing.country %>"class="form-control">
                        </div>
                </div>
                <div>
                    <label for="" class="form-label"></label>
                    <input type="text" name="listing[image][url]"  value="<%= listing.image.url %>"class="form-control">
                </div>
                <br><br>
                <button class="btn btn-dark">Edit it</button>
                <br ><br>
            </form>
        </div>
    </div>
</body>
