<% layout("layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <br><br>
            <h2>Add your information</h2>
            <form method="POST" action="/listings" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="title" class="form-label">title</label>
                    <input type="text" name="listing[title]" placeholder="enter title" class="form-control" required>
                    <div class="valid-feedback">Title Looks good!</div>
                    <div class="invalid-feedback">please enter valid title</div>
                </div>
                
                <div class="mb-3">
                    <label for="descripton" class="form-label">description</label>
                    <textarea name="listing[description]" id="" placeholder="write your description" class="form-control" required></textarea>
                    <div class="valid-feedback"> Dscription seems ok!</div>
                    <div class="invalid-feedback">please enter description</div>
                </div>
                
                <div class="mb-3">
                    <label for="location" class="form-label">location</label>
                    <input type="text" name="listing[location]" placeholder="enter location" class="form-control" required>
                    <div class="valid-feedback">Location is correct!</div>
                    <div class="invalid-feedback">please enter valid location</div>
                </div>
                <div class="row">
                    <div class="mb-3 col-4">
                        <label for="price" class="form-label">price</label>
                        <input type="text" name="listing[price]" placeholder="enter price" class="form-control" required>
                        <div class="valid-feedback">Price is fine!</div>
                        <div class="invalid-feedback">please enter price</div>
                    </div>
                
                    <div class="mb-3 col-8">
                        <label for="country" class="form-label">conutry</label>
                        <input type="text" name="listing[country]" placeholder="write country name" class="form-control" required>
                        <div class="valid-feedback"> Country is valid!</div>
                        <div class="invalid-feedback">please enter valid country</div>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label for="image" class="form-label">image</label>
                    <input type="text" name="listing[image][url]" placeholder="enter image LINK/URl" class="form-control">
                </div>
                <br><br>
                <button class="btn btn-dark">list it</button>
                <br><br>
            </form>
        </div>
    </div>
</body>
